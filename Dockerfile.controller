FROM node:25-alpine AS web-build
WORKDIR /web
COPY web/package*.json ./
RUN npm install
COPY web/ .
RUN npm run build

FROM golang:1.25 AS go-build
WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o controller ./cmd/controller \
    && CGO_ENABLED=0 GOOS=linux go build -o agent ./cmd/agent

FROM debian:stable-slim
RUN apt-get update && apt-get install -y \
    ca-certificates \
    mtools \
    wget \
    xz-utils \
    qemu-user-static \
    fdisk \
    mount \
    parted \
    udev \
    e2fsprogs \
    dosfstools \
    && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY --from=go-build /app/controller /app/controller
COPY --from=go-build /app/agent /app/agent
COPY --from=web-build /web/dist /app/web/dist
ENV WEB_ROOT=/app/web/dist
ENV AGENT_BINARY_PATH=/app/agent
EXPOSE 8080
CMD ["/app/controller"]
